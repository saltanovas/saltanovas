<svg xmlns="http://www.w3.org/2000/svg"
     xmlns:xlink="http://www.w3.org/1999/xlink"
     viewBox="0 0 480 100"
     preserveAspectRatio="xMidYMid meet"
     width="100%"
     height="auto">
    <foreignObject width="100%" height="100%">
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
        <style>
                /* Layout Utilities */
                .d-flex {
                    display: flex;
                }

                .flex-column {
                    flex-direction: column;
                }

                .align-items-center {
                    align-items: center;
                }

                .justify-content-center {
                    justify-content: center;
                }

                .me-3 {
                    margin-right: 1rem;
                }

                .ms-auto {
                    margin-left: auto;
                }

                .text-muted-light {
                    color: #6c757d;
                }

                .text-muted-dark {
                    color: #adb5bd;
                }

                .text-dark {
                    color: #212529;
                }

                .text-white {
                    color: #ffffff;
                }

                .text-decoration-none {
                    text-decoration: none;
                }

                .fw-semibold {
                    font-weight: 600;
                }

                /* Image Styling */
                .img-fluid {
                    max-width: 100%;
                    height: auto;
                }

                .rounded {
                    border-radius: 0.25rem;
                }

                /* Container Spacing */
                .container {
                    widht: 100%;
                    padding: 1rem 1rem 1rem 1rem;
                }

                .my-3 {
                    margin-top: 1rem;
                    margin-bottom: 1rem;
                }

                .art {
                    width: 27%;
                    float: left;
                    margin-left: -5px;
                }

                .song {
                    width: 330px;
                    color: #666;
                    overflow: hidden;
                    margin-top: 3px;
                    font-size: 24px;
                    text-align: center;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    background: linear-gradient(
                        125deg,
                        rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
                        rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
                    );
                    background-size: 200% 100%;
                    background-position: 0% 50%;
                    -webkit-text-fill-color: transparent;
                    -webkit-background-clip: text;
                    -webkit-box-decoration-break: clone;
                    box-decoration-break: clone;
                    animation: gradient 15s ease infinite;
                }

                .artist {
                    width: 330px;
                    color: #b3b3b3;
                    font-size: 20px;
                    margin-top: 4px;
                    text-align: center;
                    margin-bottom: 5px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    background: linear-gradient(
                        -125deg,
                        rgb({{ songPalette[0][0] }}, {{ songPalette[0][1] }}, {{ songPalette[0][2] }}),
                        rgb({{ songPalette[1][0] }}, {{ songPalette[1][1] }}, {{ songPalette[1][2] }})
                    );
                    background-size: 200% 100%;
                    background-position: 0% 50%;
                    -webkit-text-fill-color: transparent;
                    -webkit-background-clip: text;
                    -webkit-box-decoration-break: clone;
                    box-decoration-break: clone;
                    animation: gradient 12s ease infinite;
                }

                .cover {
                    width: 100px;
                    height: 100px;
                    border-radius: 5px;
                }

                #bars {
                    display: flex;
                    justify-content: space-around;
                    align-items: flex-end;
                    min-height: 30px;
                    gap: 2px;
                }

                .bar {
                    width: 3px;
                    animation: pulse 0.9s ease-in-out infinite alternate;
                    border-radius: 3px;
                }

                a {
                    text-decoration: none;
                }

                div {
                    font-size: 1em;
                    font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial,
                        sans-serif, Apple Color Emoji, Segoe UI Emoji;
                }

                @keyframes gradient {
                    0% {
                        background-position: 0% 50%;
                    }

                    50% {
                        background-position: 100% 50%;
                    }

                    100% {
                        background-position: 0% 50%;
                    }
                }

                @keyframes pulse {
                    0% {
                        height: 3px;
                        opacity: .35;
                    }

                    100% {
                        height: 15px;
                        opacity: 0.95;
                    }
                }

                {{ barCSS|safe }}
        </style>
        <div class="d-flex align-items-center">
            <!-- Cover Image -->
            <div class="me-3 d-flex align-items-center">
                <a href="{{ songURI }}">
                    <img src="data:image/png;base64,{{ image }}"
                         class="img-fluid rounded"
                         style="width: 90px;
                                height: 90px;
                                object-fit: cover"
                         alt="Cover">
                </img>
            </a>
        </div>
        <!-- Song Info -->
        <div class="d-flex flex-column justify-content-center">
            <a href="{{ songURI }}" class="text-decoration-none">
                <div class="fw-semibold {{ 'text-white' if theme == 'dark' else 'text-dark' }}">{{ songName }}</div>
            </a>
            <a href="{{ artistURI }}" class="text-decoration-none">
                <div class="{{ 'text-muted-dark' if theme == 'dark' else 'text-muted-light' }}">{{ artistName }}</div>
            </a>
            {%- set totalBars = 60 -%}
            <div id="bars">
                {%- for i in range(totalBars) %}
                    <div class="bar"
                         style="animation-delay: {{ loop.index0 * 25 }}ms;
                                background: linear-gradient(90deg, rgb({{ barPalette[0][0] }}, {{ barPalette[0][1] }}, {{ barPalette[0][2] }}), rgb({{ barPalette[1][0] }}, {{ barPalette[1][1] }}, {{ barPalette[1][2] }}), rgb({{ barPalette[2][0] }}, {{ barPalette[2][1] }}, {{ barPalette[2][2] }}), rgb({{ barPalette[3][0] }}, {{ barPalette[3][1] }}, {{ barPalette[3][2] }}) );
                                background-size: {{ totalBars * 100 }}% 100%;
                                background-position: {{ (loop.index0 / totalBars) * 100 }}% 0"></div>
                {%- endfor %}
            </div>
        </div>
    </div>
</div>
</foreignObject>
</svg>
